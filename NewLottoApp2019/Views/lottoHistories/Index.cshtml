@model IEnumerable<NewLottoApp2019.Models.lottoHistory>
@*<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />*@

@{
    ViewBag.Title = "Input your date range here";
}
@*@Html.EditorFor(model => model.JoiningDate,
    new { htmlAttributes = new { @class = "form-control date-picker" } })*@
<h2>Input Picks and your date range here</h2>
@using (Html.BeginForm())
{
<div class="form-control-horizontal">
    <div class="form-group form-group-sm">
        <div class="col-sm-3">
            @Html.TextBox("pick1", null, new { placeholder = "Pick 1", @class = "form-input" })
        </div>
        <div class="col-sm-3">
            @Html.TextBox("pick2", null,  new { placeholder = "Pick 2", @class = "form-input" })
        </div>
        <div class="col-sm-3">
            @Html.TextBox("pick3", null, new { placeholder = "Pick 3", @class = "form-input" })
        </div>

    </div>
    <div class="form-group form-group-sm">
        <div class="col-md-8">
            @Html.TextBox("start", null, new { @class = "form-control datepicker" })
        </div>
    </div>

    <div class="form-group-sm">
        <div class="col-md-8">
            @Html.TextBox("end", null, new { @class = "form-control datepicker" })
        </div>
    </div>
    <div class=" form-group-sm">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Search" class="btn btn-default" /> <span></span>
        </div>
    </div>
</div>

}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mid_Day)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pk1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pk2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pk3)
        </th>
       
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mid_Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pk1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pk2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pk3)
            </td>
            
        </tr>
    }

</table>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")

    <script type="text/javascript">
        $(document).ready(function () {
            $('input[type=datetime]').datepicker({
                dateFormat: "dd/M/yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-60:+0"
            });

        });
    </script>

}